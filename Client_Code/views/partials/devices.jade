.leftPanel
	span.item
		span Search By:
	span.item
		label(for="byFirstName") Device Name
		input#byDeviceName.searchBox(type="text",name="byDeviceName")
		button.goButton Go
	span.item
		label(for="byDeviceType") Device Type
		input#byDeviceType.searchBox(type="text",name="byDeviceType")
		button.goButton Go
	span.item
		label(for="byDeviceHostname") Device Hostname
		input#byDeviceHostname.searchBox(type="text",name="byDeviceHostname")
		button.goButton Go
.mainPanel
	span.item Results for...
	span.item
		button(ng-click="addDevice()") Add
		button(ng-click="editDevice()") Edit
		button(ng-click="deleteDevice()") Delete
	span.item
		table
			tr
				th Name
				th Type
				th Hostname
			tr(ng-repeat="device in devices", class="{{'row' + $index % 2 }}", ng-click="changeCurrentDevice($event, $index)")
				td {{device.name}}
				td {{device.type}}
				td {{device.hostname}}
