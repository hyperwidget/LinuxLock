.leftPanel
	span.item
		span Search By:
	span.item
		label(for="byDeviceName") Device Name
		input#byDeviceName.searchBox(type="text", ng-model="name", name="byDeviceName")
		button.goButton(ng-click="searchByDeviceName()") Go
	span.item
		label(for="byDeviceHostname") Device Hostname
		input#byDeviceHostname.searchBox(type="text", ng-model="hostname", name="byDeviceHostname")
		button.goButton(ng-click="searchByHostName()") Go
.mainPanel
	span.item
		button(ng-click="addDevice()", ng-disabled="isAddButtonDisabled") Add
		button(ng-click="editDevice()", ng-disabled="isEditButtonDisabled") Edit
		button(ng-click="deleteDevice()", ng-disabled="isDeleteButtonDisabled") Delete
	span.item
		table
			tr
				th Name
				th Hostname
			tr(ng-repeat="device in devices | orderBy:'name'", class="{{'row' + $index % 2 }}", ng-click="changeCurrentDevice($event, device._id)")
				td {{device.name}}
				td {{device.hostname}}
