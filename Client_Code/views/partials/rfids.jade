.leftPanel
    span.item
        span Search By:
    span.item
        label(for="byCardNumber") Card Number
        input.searchBox(type="text", ng-model="rfidNo", id="byCardNumber")
        button.goButton(ng-click="searchByRFIDNo()") Go
    span.item
        label(for="byStatus") Status
        input.searchBox(type="text", ng-model="status", id="byStatus")
        button.goButton(ng-click="searchByRFIDStatus()") Go
.mainPanel
    span.item Results for...
    span.item
        button(ng-click="addRFID()") Add
        button(ng-click="editRFID()") Edit
        button(ng-click="deleteRFID()") Delete
    span.item
        table
            tr
                th Card Number
                th Status
            tr(ng-repeat="rfid in rfids", class="{{'row' + $index % 2 }}", ng-click="changeCurrentRFID($event, $index)")
                td {{rfid.rfidNo}}
                td {{rfid.status}}
