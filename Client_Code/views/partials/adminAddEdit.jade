form(name="form", class="css-form", novalidate)
    span.item
        label(for="name") Name
        input.searchBox(type="text", id="name", ng-model="currentAdmin.name", required, name, maxlength="100")
    span.item
        label(for="username") User Name
        input.searchBox(type="text", id="username", ng-model="currentAdmin.username", required, maxlength="50")
    span.item
        label(for="password") Password
        input.searchBox(type="password", id="password", ng-model="currentAdmin.password", required, minlength="8", maxlength="50")
    span.item
        label(for="manageUsers") Manage Users
        input(type="checkbox", id="manageUsers", ng-model="currentAdmin.canManageUsers")
    span.item
        label(for="manageDevices") Manage Devices
        input(type="checkbox", id="manageDevices", ng-model="currentAdmin.canManageDevices")
    span.item
        label(for="manageZones") Manage Zones
        input(type="checkbox", id="manageZones", ng-model="currentAdmin.canManageZones")
    span.item
        label(for="generateReports") Generate Reports
        input(type="checkbox", id="generateReports", ng-model="currentAdmin.canGenerateReports")
    span.item
        label(for="manageRFIDs") Manage Cards
        input(type="checkbox", id="manageRFIDs", ng-model="currentAdmin.canManageRFIDs")
    span.item
        label(for="manageSettings") Manage Settings
        input(type="checkbox", id="manageSettings", ng-model="currentAdmin.canManageSettings")
    button(ng-disabled="form.$invalid", ng-click="saveData()") Save
    button(ng-click="hidePopup()") Cancel
