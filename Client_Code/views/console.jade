extends layout

block header

block content
    #container(ng-app="adminConsoleApp")
        div.header(ng-controller="HeaderController")
            span.item.logo Administration Console
            span.item.nav
                ul.navbar
                    li(ng-repeat="navbarItem in navbarItems")
                        a.item(href="#/{{navbarItem.name}}") {{navbarItem.name}}
            span.item.logout Logout
        div.content
            ng-view
        #popup(ng-controller="PopupController")
            div.mask
            div.content
                div.window
                    div.windowHeader
                    div.windowContent
                        span.item
                            label(for="FirstName") First Name
                            input.searchBox(type="text", id="FirstName")
                        span.item
                            label(for="LastName") Last Name
                            input.searchBox(type="text", id="LastName")
                        span.item
                            label(for="CardNumber") Card Number
                            input.searchBox(type="text", id="CardNumber")
                        span.item
                            label(for="Email") Email
                            input.searchBox(type="text", id="Email")
                        span.item
                            label(for="PhoneNumber") Phone Number
                            input.searchBox(type="text", id="PhoneNumber")
                        span.item
                            label(for="Zone") Zone
                            input.searchBox(type="text", id="Zone")
                        span.item
                            label(for="Device") Device
                            input.searchBox(type="text", id="Device")
                    div.windowFooter
                        button Save
                        button Cancel
block footer
    script(src="js/lib/angular.js")
    script(src="js/app.js")
    script(src="js/controllers/HeaderController.js")
    script(src="js/controllers/UsersController.js")
    script(src="js/controllers/DevicesController.js")
    script(src="js/controllers/ZonesController.js")
    script(src="js/controllers/ReportsController.js")
    script(src="js/controllers/AdminController.js")
    script(src="js/controllers/SettingsController.js")
    script(src="js/controllers/PopupController.js")
    script(src="js/services/DataManager.js")
